#include<stdio.h>  
#include<time.h>
#include<stdlib.h>
int main(){
	printf("give the number:");
	int n;	
	int i;
	int j;
	while(scanf("%d",&n)){
	{if(n%2==0){
		printf("worng,give the odd number");
		}
		else {
		for(i=1;i<=n/2+1;i++){

		for(int k=1;k<=n-2*i+1;k++)
		{
		srand(time(NULL));
		    printf(" ");
		}
		for(j=1;j<=2*i-1;j++)
		{
			
			int a=rand();
				printf("%d ",a%10);
		}
		printf("\n");
		
		}
			for(i=1;i<=n/2;i++)
	{
		for(int k=1;k<=2*i;k++)
		{
		srand(time(NULL));
		printf(" ");
		}
		for(j=1;j<=n-2*i;j++)
		{
			
			int a=rand();
				printf("%d ",a%10);
		}
		printf("\n");
		}
	}
}

}
return 0;
	}
		

